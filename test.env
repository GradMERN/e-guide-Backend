# Test environment for local testing
PORT=3001
SERVER_URL=http://localhost:3001

# Use a local MongoDB test database to avoid using production credentials
MONGO_URI=mongodb://127.0.0.1:27017/TourGuideTestDB

# JWT
JWT_SECRET=test_jwt_secret_for_local
JWT_EXPIRES_IN=7d

# Dummy Google OAuth (use test IDs or leave empty if not testing OAuth)
GOOGLE_CLIENT_ID=google-client-id-placeholder
GOOGLE_CLIENT_SECRET=google-client-secret-placeholder
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

